<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Título :"
        android:id="@+id/textViewTitulo"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="49dp"
        android:textColor="#5b6ed8"
        android:textSize="24dp"
        android:layout_below="@+id/textViewNuevoRegistro"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTitulo"
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:layout_alignBottom="@+id/textViewTitulo"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewTitulo"
        android:layout_alignStart="@+id/editTextAutor" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NUEVO REGISTRO"
        android:id="@+id/textViewNuevoRegistro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Autor :"
        android:id="@+id/textViewAutor"
        android:textColor="#5b6ed8"
        android:textSize="24dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/editTextTitulo"
        android:layout_alignParentStart="true" />

    <EditText
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAutor"
        android:layout_alignBottom="@+id/textViewAutor"
        android:layout_toEndOf="@+id/textViewTitulo"
        android:layout_alignStart="@+id/editTextEditorial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Editorial :"
        android:id="@+id/textViewEditorial"
        android:textColor="#5b6ed8"
        android:textSize="24dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/editTextAutor"
        android:layout_alignParentStart="true" />

    <EditText
        style="@android:style/TextAppearance.Holo.Widget.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEditorial"
        android:layout_alignBottom="@+id/textViewEditorial"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewEditorial" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Añadir Registro"
        android:id="@+id/buttonAdd"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/editTextEditorial"
        android:layout_centerHorizontal="true" />
</RelativeLayout>